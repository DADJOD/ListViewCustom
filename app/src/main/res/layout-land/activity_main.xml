<?xml version="1.0" encoding="utf-8"?>
<com.example.listviewcustom.DualPaneContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dualPaneContainer"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <com.example.listviewcustom.ItemListView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="3" />

    <include
        layout="@layout/detail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="7"
        />
</com.example.listviewcustom.DualPaneContainer>